<UserControl x:Class="DMO.Controls.FileNameTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:DMO.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <TextBox x:Name="TextBox"
             Style="{StaticResource Minimalist}" 
             Text="{x:Bind Text, Mode=TwoWay}"
             VerticalAlignment="Center"
             HorizontalAlignment="Center"
             KeyDown="TextBox_KeyDown"
             SelectionChanged="TextBox_SelectionChanged"
             FocusDisengaged="TextBox_FocusDisengaged"
             GettingFocus="TextBox_GettingFocus"/>

</UserControl>
